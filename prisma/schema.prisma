generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Squad {
  id             String     @id @default(uuid())
  name           String     @unique
  productManager String
  techManager    String
  initialTime    DateTime
  description    String
  members        String[]
  CreatedAt      DateTime
  Tutorial       Tutorial[]
}

model Tutorial {
  id            String   @id @default(uuid())
  title         String
  urlVideo      String
  progress      Int
  titleVideo    String
  description   String
  image_url     String
  outside_url   String
  image_title   String
  created_at    DateTime
  tutorial_tipe Int

  id_squad Squad[]

  id_activities       Activity[]
  TutorialsActivities TutorialsActivities[]
}

model Activity {
  id          String   @id @default(uuid())
  description String
  title       String
  options     String[]
  answer      String
  image_title String
  image_url   String
  baddge      String
  created_at  DateTime

  id_tutorial         Tutorial[]
  TutorialsActivities TutorialsActivities[]
}

model TutorialsActivities {
  activity   Activity @relation(fields: [activityId], references: [id])
  activityId String

  tutorial   Tutorial @relation(fields: [tutorialId], references: [id])
  tutorialId String

  @@id([activityId, tutorialId])
}
