// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Squad {
  id              String    @id @default(uuid())
  name            String    @unique
  product_manager String
  techManager     String
  initialTime     DateTime
  description     String
  members         String[]
  created_at      DateTime
  updated_at      DateTime?

  tutorial Tutorial[]
}

model Tutorial {
  id            String    @id @default(uuid())
  title         String
  urlVideo      String
  progress      Int
  titleVideo    String
  description   String
  image_url     String
  outside_url   String
  image_title   String
  created_at    DateTime
  tutorial_tipe Int
  updated_at    DateTime?

  Squad    Squad?  @relation(fields: [squad_id], references: [id])
  squad_id String?

  activity Activity[]
}

model Activity {
  id          String    @id @default(uuid())
  description String
  title       String
  options     String[]
  answer      String
  image_title String
  image_url   String
  badge       String
  created_at  DateTime
  updated_at  DateTime?

  Tutorial    Tutorial? @relation(fields: [tutorial_id], references: [id])
  tutorial_id String?
}
